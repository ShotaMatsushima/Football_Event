<% provide(:title, @event.event_name) %>
<p>イベント写真 <%= image_tag @event.image.url %> </p>
<p>イベント名 <%= @event.event_name %> </p>
<p>イベント説明 <%= @event.description %> </p>
<p>イベント住所 <%= @event.address %> </p>
<p>イベントのタイトル <%= @event.title %> </p>
<%= render "maps/google_map_view", { event: @event } %>

<p>イベントチーム <%= @event.event_team %> </P>
<p>定員数 <%= @event.capacity %> <p>
<div id="likes_buttons_<%= @event.id %>">
  <%= render 'likes/like', { event: @event} %>
</div>
<div>
  <h4>コメント</h4>
  <div id="comments_area"><!-- #① -->
    <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
    <%= render "comments/index", { comments: @comments } %>
  </div>
  <% if user_signed_in? %>
    <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
    <%= render "comments/form", { comment: @comment, event: @event } %>
  <% end %>
</div>
<% if current_user?(@event.user) %>
  <%= link_to "イベント編集", edit_event_path(@event.id) %>
  <%= link_to "イベント削除", @event, method: :delete,
                data: { confirm: "You sure?" } %>
<% else %>
<div id="participations_buttons_<%= @event.id %>">
  <%= render "participations/participation_event_form", { event: @event } %>
</div>
<% end %>
<p> <%= link_to "Homeに戻る", root_path %> </p>

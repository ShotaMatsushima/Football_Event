<% provide(:title, "Event all") %>
<% if unchecked_notifications.any? %>
  <i class="fa fa-circle" style="color: gold;"></i>
<% end %>
<%= link_to "NOTICE", notifications_path, class: "btn-default" %>
<h1> <%= link_to "イベント作成", new_event_path %> </h1>
<p> <%= link_to "マイページ", current_user %> </p>
<%= render "event_search", { q: @q }%>
<% if @events.any? %>
  <%= render @events, { event: @event} %>
<% else %>
  <h3><%= "検索結果がありません。" %></h3>
<% end %>
<%= paginate @events %>

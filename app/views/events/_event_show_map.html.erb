<div class="card bg-white border-none">
  <div class="card-header font-weight-bold">
    イベント会場
  </div>
  <div class="card-body p-4">
    <div class="form-group px-5">
      <h3 class="event-title"><i class="fas fa-home mr-2"></i>住所</h3>
      <span class="event-description">
        <%= event.address %>
      </span>
      <h3 class="event-title"><i class="fas fa-building mr-2"></i>施設名</h3>
      <span class="event-description">
        <%= event.title %>
      </span>
      <h3 class="event-title"><i class="fas fa-map-marker-alt mr-2"></i>イベント会場地図</h3>
      <span class="event-description">
        <%= render "maps/google_map_view", { event: event } %>
      </span>
    </div>
  </div>
</div>

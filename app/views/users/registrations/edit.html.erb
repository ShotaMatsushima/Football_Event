<% provide(:title, @user.name + "_Edit") %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="card bg-white border-none">
  <div class="card-header font-weight-bold">
    プロフィール編集
  </div>
  <div class="card-body p-4">
    <div class="form-group px-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <table>
          <tr>
            <th>項目</th>
            <th>入力欄</th>
          </tr>
          <tr>
            <td>名前</td>
            <td>
              <div class="field">
                <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Eメール</td>
            <td>
              <p>半角英数字</p>
              <%= f.email_field :email, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td>都道府県</td>
            <td>
              <%= f.select :user_address, TODOUFUKEN.map{ |r| [r, r] }, :prompt => "選択してください", class:"form-control" %>
            </td>
          </tr>
          <tr>
            <td>お気に入りチーム</td>
            <td>
              <%= f.select :favorite_team, FOOTBALL_TEAM.map{ |r| [r, r] } ,:prompt => "選択してください", class:"form-control" %>
            </td>
          </tr>
        </table>
        <div class="actions">
          <button type="submit" class="card-button btn btn-danger btn-lg">情報を更新する</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if event.participated_by?(current_user) %>
  <%=link_to "参加やめる", event_participations_path(event.id), class: "btn btn-danger btn-lg", method: :delete, remote: true %></p>
<% else %>
  <%=link_to "参加する", event_participations_path(event.id), class: "btn btn-primary btn-lg", method: :post, remote: true %></p>
<% end %>
